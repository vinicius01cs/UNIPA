<div class="container text-center customForm">
    <form method="POST" action="/disciplina/editarDisciplina/{{this.disciplina_id}}">
        <input type="hidden" name="id" value="{{curso.curso_id}}">
        <div class="form-group mx-auto">
            <h3>Editar Disciplina</h3>
            <div class="form-row justify-content-center mt-5">
                <div class="col-md-2 text-right mt-2">
                    <label for="nomeDisciplina">Nome da Disciplina</label>
                </div>
                <div class="col-md-6">
                    <input type="text" id="nomeDisciplina" name="nomeDisciplina" class="form-control" value="{{disciplina.nome}}"required>
                </div>
            </div>
            <div class="form-row justify-content-center mt-3">
                <div class="col-md-2 text-right mt-2">
                    <label for="sigla">CÃ³digo da Disciplina</label>
                </div>
                <div class="col-md-6">
                    <input type="text" id="siglaDisciplina" name="siglaDisciplina" class="form-control" value="{{disciplina.sigla_disciplina}}" required>
                </div>
            </div>
            <div class="form-row justify-content-center mt-3">
                <div class="col-md-2 text-right mt-2">
                    <label for="departamento">Professor</label>
                </div>
                <div class="col-md-6">
                    <select name="professor" id="professor" class="form-control" required>
                        {{#each professores}}
                        <option value="{{this.professor_id}}">{{this.nome}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
            <div class="form-row justify-content-center mt-3">
                <div class="col-md-2 text-right mt-2">
                    <label for="departamento">Selecione os cursos da qual a discplina pertence</label>
                </div>
                <div class="col-md-6">
                    <select name="cursos[]" id="cursos" class="form-control" multiple required>
                        {{#each cursos}}
                        <option value="{{this.curso_id}}">{{this.nome}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
            <input type="submit" value="Cadastrar" class="btn btn-primary">
        </div>
    </form>
</div>